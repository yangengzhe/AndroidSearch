<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.66" >

        <Spinner
            android:id="@+id/spinner_tianqi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="84dp"
            android:layout_toLeftOf="@+id/spinner_tianqi_2" />

        <Spinner
            android:id="@+id/spinner_tianqi_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_tianqi_1"
            android:layout_alignTop="@+id/spinner_tianqi_1"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_centerVertical="true"
            android:text="温度"
            android:layout_marginTop="28dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_tianqi_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/textView_tianqi_city"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_tianqi_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_face_1"
            android:layout_alignBottom="@+id/textView_face_1"
            android:layout_alignLeft="@+id/textView_tianqi_tem"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_tianqi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_tianqi_2"
            android:layout_alignBottom="@+id/button_tianqi_2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:text="查询" />

        <TextView
            android:id="@+id/textView_face_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_face_1"
            android:layout_below="@+id/textView_face_1"
            android:layout_marginTop="28dp"
            android:text="发布时间"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_tianqi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_face_2"
            android:layout_alignBottom="@+id/textView_face_2"
            android:layout_alignLeft="@+id/textView_tianqi_weather"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/spinner_tianqi_2"
            android:text="城市："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignRight="@+id/textView2"
            android:text="城市"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_face_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="28dp"
            android:text="天气"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_tianqi_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_tianqi_weather"
            android:layout_toLeftOf="@+id/textView_tianqi_weather"
            android:src="@drawable/blank" />

        <TextView
            android:id="@+id/textView_tianqi_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/spinner_tianqi_2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinner_tianqi_2"
            android:layout_alignLeft="@+id/spinner_tianqi_1"
            android:layout_marginBottom="14dp"
            android:text="省份："
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_tianqi_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/textView4"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:text="当前地点" />

    </RelativeLayout>

</LinearLayout>